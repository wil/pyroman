<pyroman>
  <!-- these tcp flag combinations are invalid, and are only used by certain
  network scanning tools such as nmap. They can be safely dropped. -->
  <iptables chain="manPRE" filter="-p tcp --tcp-flags ALL FIN,URG,PSH -j *drop*" />
  <iptables chain="manPRE" filter="-p tcp --tcp-flags ALL NONE -j *drop*" />
  <iptables chain="manPRE" filter="-p tcp --tcp-flags SYN,RST SYN,RST -j *drop*" />
  <iptables chain="manPRE" filter="-p tcp --tcp-flags SYN,FIN SYN,FIN -j *drop*" />
</pyroman>
